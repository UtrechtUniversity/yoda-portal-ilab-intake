<schema>
	<project_name>
		<label>Project name</label>
		<help>Enter a project name</help>
		<type>text</type>
		<type_configuration>
			<length>false</length>
			<pattern>*</pattern>
			<longtext>false</longtext>
		</type_configuration>
		<required>true</required>
		<depends>false</depends>
	</project_name>
	<project_id>
		<label>Project ID</label>
		<help>Enter the project unique ID</help>
		<type>text</type>
		<type_configuration>
			<length>false</length>
			<pattern>*</pattern>
			<longtext>false</longtext>
		</type_configuration>
		<required>true</required>
		<depends>false</depends>
	</project_id>
	<project_description>
		<label>Project description</label>
		<help>Enter the project description</help>
		<type>text</type>
		<type_configuration>
			<length>false</length>
			<pattern>*</pattern>
			<longtext>true</longtext>
		</type_configuration>
		<required>true</required>
		<depends>false</depends>
	</project_description>
	<pi>
		<label>Principal Investigator</label>
		<help>Who is the principal investigatr for this project</help>
		<type>custom</type>
		<custom_type>userlist</custom_type>
		<type_configuration>
			<allow_create>false</allow_create>
			<show_admins>true</show_admins>
			<show_users>true</show_users>
			<show_readonly>true</show_readonly>
		</type_configuration>
		<required>true</required>
		<depends>false</depends>
		<multiple>
			<min>0</min>
			<max>100</max>
			<infinite>false</infinite>
		</multiple>
	</pi>
    <start_year>
        <label>Start year</label>
        <help>Enter a start year. If it's larger than or equal to 2000, the depends field should show</help>
        <type>text</type>
	    <type_configuration>
	    	<length>false</length>
        	<pattern>*</pattern>
 		    <longtext>false</longtext>
        </type_configuration>
    </start_year>
    <end_year>
        <label>end year</label>
        <help>Enter a start year. If it's less than 2016, the depends field should show</help>
        <type>text</type>
		<type_configuration>
			<length>false</length>
        	<pattern>*</pattern>
			<longtext>false</longtext>
        </type_configuration>
    </end_year>
    <depends_example>
        <label>Example</label>
        <help>This field only shows if start_year is equal to or higher than 2000 or end_year is strictly less than 2016. </help>
	    <type>text</type>
	    <type_configuration>
	        <length>10</length>
	        <pattern>*</pattern>
	        <longtext>false</longtext>
	    </type_configuration>
	    <required>false</required>
	    <depends>
	        <action>show</action>
	        <if>any</if>
	        <fields>
	            <option>
	                <field_name>start_year</field_name>
	                <operator>geq</operator>
	                <value>
	                    <fixed>2000</fixed>
	                </value>
	            </option>
	            <option>
	                <field_name>end_year</field_name>
	                <operator>lt</operator>
	                <value>
	                    <fixed>2016</fixed>
	                </value>
	            </option>
	        </fields>
	    </depends>
	</depends_example>
</schema>